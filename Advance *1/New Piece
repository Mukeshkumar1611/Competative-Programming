// New Piece

#include <iostream>
using namespace std;

int main()
{
    // your code goes here
    int t;
    cin >> t;
    while (t--)
    {
        int a, b, c, d;
        cin >> a >> b >> c >> d;
        if (a == c and b == d)
        {
            cout << 0 << endl;
        }
        else if ((a + b) % 2 == 0 and (c + d) % 2 == 0)
        {
            cout << 2 << endl;
        }
        else if ((a + b) % 2 == 1 and (c + d) % 2 == 1)
        {
            cout << 2 << endl;
        }
        else
        {
            cout << 1 << endl;
        }
    }
    return 0;
}
