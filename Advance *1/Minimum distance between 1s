#include <bits/stdc++.h>
using namespace std;
int main()
{
    int t;
    cin >> t;
    while (t--)
    {
        int n;
        cin >> n;
        string mk;
        cin >> mk;

        vector<int> v1;

        for (int i = 0; i < n; i++)
        {
            if (mk[i] == '1')
            {
                v1.push_back(i);
            }
        }

        int ans = INT_MAX;

        for (int i = 1; i < v1.size(); i++)
        {
            int curr = v1[i];
            while (curr > v1[0])
            {
                ans = min(ans, abs( v1[0] - curr));
                curr = curr - 2;
            }
        }

        cout << ans << endl;
    }
    return 0;
}
